<h6>Dashboard</h6>
<h3>Welcome {{ name }} </h3>
<p>Here are your Projects</p>

{{#if projects}}
    <table class="striped">
        <thead>
            <tr>
                <th>Project Name</th>
                <th>Due Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each projects}}
                <tr>
                    <td><a href="/projects/{{_id}}">{{title}}</a></td>
                    <td>{{formatDate due 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status"> {{status}}</span></td>
                    <td>
                        <a href="/projects/edit/{{_id}}" class="btn btn-float">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form action="/projects/{{_id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

{{else}}
    <p>You have no projects currently.</p>
{{/if}}