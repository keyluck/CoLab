<div class="row">
    <div class="col s12 m8">
        <h3>{{project.title}}
            <small>{{{editIcon project.user user project._id false}}}</small>

        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">Project Due: {{formatDate project.due 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{project.body}}}
            </div>
        </div>

        

    </div>

    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{project.user.displayName}}</span>
                <img src="{{project.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/projects/user/{{project.user._id}}">My Projects</a>
            </div>
        </div>
    </div>
    

    <div class="col s12 m8">
        <h4>Tasks</h4>
         {{#each projects.tasks}}
            <div class="card">
                
                <div class="card-content center-align">
                    <h5>{{body}}</h5> </br>
                    <h6>{{assignedTo}}</h6>
                    <br>
                   
                </div>
               
            </div>
        </div>
        {{else}}
            <p>No tasks to display</p>
        {{/each}}
    </div>

</div>