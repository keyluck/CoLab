<div class="row">
    <div class="col s12 m8">
        <h3>{{project.title}}
            <small>{{{editIcon project.user user project._id false}}}</small>

        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">Project Due: {{formatDate project.due 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{project.body}}}
            </div>
        </div>

        <div class="card story">
            <div class="card-content">
                <span class="card-title">Add New Group Member 
                    <div class="input-field">
                        <input type="email" id="email" name="email">
                        <label for="email">Email</label>
                    </div>
                    <small> {{{addMemberIcon project.user user project._id false}}}</small>
                </span>
            </div>
        </div>

        <div class="card story">
            <div class="card-content">
                <span class="card-title">Add New Task</span>
            </div>
        </div>

    </div>

    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{project.user.displayName}}</span>
                <img src="{{project.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/projects/user/{{project.user._id}}">My Projects</a>
            </div>
        </div>
    </div>
    

</div>