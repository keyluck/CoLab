<div class="row">
    <div class="col s12 m8">
        <h3>{{project.title}}
            <small>{{{editIcon project.user user project._id false}}}</small>

        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">Project Due: {{formatDate project.due 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{project.body}}}
            </div>
        </div>

        

    </div>

    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{project.user.displayName}}</span>
                <img src="{{project.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/projects/user/{{project.user._id}}">My Projects</a>
            </div>
        </div>
    </div>
</div>
 <table class="striped">
    <div class="col s12 m8">
        <h4>Tasks
            <small>{{{taskIcon project.user user project._id false}}}</small>
        </h4>
        {{#if project.tasks}}
        <thead>
            <tr>
                <th>Task Description</th>
                <th>Assigned To</th>
                <th>Status</th>
            </tr>
        </thead>
        {{/if}}
        <tbody>
            {{#each project.tasks}}
                <tr>
                    <td>{{this.description}}</td>
                    <td>{{this.assignedTo}}</td>
                    <td>{{this.status}}</td>
                </tr>
            {{else}}
            <div class="card"></div>
                <p>No tasks to display</p>
            </div>
        {{/each}}
        </tbody>       

    </div>
</table>
    
    


