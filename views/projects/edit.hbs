<h3>Edit Project</h3>
<div class="row">
    <form action="/projects/{{project._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{story.title}}">
                <label for="title">Title</label>
            </div>

        </div>

        <div class="row">
                <h5>Project's Members</h5>
                <ul>
                    {{#each projects.members}}
                           <li>{{this}}</li>>
                    {{/each}}
                </ul>
        </div> 

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    {{#select project.status}}
                    <option value="Incomplete" selected>Incomplete</option>
                    <option value="Complete">Complete</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Project Description:</h5>
                <textarea id="body" name="body">{{project.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <span class="card-title">Add New Group Member 
                    <div class="input-field">
                        <input type="email" id="email" name="email">
                        <label for="email">Email</label>
                    </div>
                    <small> {{{addMemberIcon project.user user project._id false}}}</small>
                </span>
            </div>
        </div>

        <div class="card story">
            <div class="card-content">
                <span class="card-title">Add New Task</span>
            </div>
        </div>
        
        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>