<h1>Projects</h1>
<div class="row">
    {{#each projects}}
        {{#if (myProjects user ../user)}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{stripTags (truncate body 150)}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/projects/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/projects/{{_id}}" class="btn grey">Manage project</a>
                </div>
            </div>
        </div>
        {{else}}

    {{else}}
        <p>No projects to display</p>
    {{/each}}
</div>